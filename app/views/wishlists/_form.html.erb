<%= simple_form_for [@wishlist] do |f| %>
  <h4 class="box-title">List Detail</h4>
  <hr class="m-t-0 m-b-40">

  <div class="row">
    <div class="col-md-6">
      <%= f.input :name, label: false, placeholder: 'Awesome Places' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.submit "Save", class: "btn btn-success" %>
      <%= link_to "Back", wishlists_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
